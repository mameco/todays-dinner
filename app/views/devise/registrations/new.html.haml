.newWrapper
  .formBox
    %h2.title 新規会員登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :name, 'ニックネーム', class: 'inputTitle'
        %br/
        = f.text_field :name, autofocus: true, class: 'inputBox'

      .field
        = f.label :email, 'メールアドレス', class: 'inputTitle'
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'inputBox'
      .field
        = f.label :password, 'パスワード', class: 'inputTitle'
        - if @minimum_password_length
          %em
            .inputTitle__explanation ※#{@minimum_password_length}文字以上
        = f.password_field :password, autocomplete: "new-password", class: 'inputBox'
      .field
        = f.label :password_confirmation, 'パスワード(確認)', class: 'inputTitle'
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'inputBox'
      .actions
        = f.submit "登録", class: 'btn'
    -# = render "devise/shared/links"
